{
	"version": "2.0.0",
	"tasks":
	[
		{
			"args": [],
			"type": "shell",
			"label": "make",
			"group": "build",
			"linux" : 
			{
				"command": "make ${input:make_mode}"
			},
			"windows" : 
			{
				"command": "msbuild ${input:msbuild_mode}"
			},
			"presentation": 
			{
				"echo": false,
				"clear": true,
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
			}
		},
		{
			"args": [],
			"type": "shell",
			"group": "build",
			"label": "gnuplot",
			"command": "gnuplot -p ${file}",
			"presentation": 
			{
				"echo": false,
				"clear": true,
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
			}
		}
	],
	"inputs": [
		{
			"id": "make_mode",
			"default": "run m=r",
			"type": "promptString",
			"description": "Make mode:"
		},
		{
			"id": "msbuild_mode",
			"type": "pickString",
			"description": "MSBuild mode:",
			"options": 
			[
				"/property:Configuration=Debug", 
				"/property:Configuration=Release", 
				"/property:Configuration=Debug /target:Clean", 
				"/property:Configuration=Release /target:Clean", 
				"/property:Configuration=Debug; x64/Debug/Tensegrity.exe", 
				"/property:Configuration=Release; x64/Release/Tensegrity.exe"
			]
		}
	]
}